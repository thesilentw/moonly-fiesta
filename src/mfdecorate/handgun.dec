ACTOR Handgun : Weapon {
	Weapon.AmmoType "Clip" 
	Weapon.AmmoGive 40
	Weapon.AmmoUse 1
	Weapon.SelectionOrder 50
	AttackSound "weapons/pistol"
	States {
		Spawn: 
		PIST A -1
		Stop
		
		Select: 
		HAND A 1 A_Raise
		Loop
		
		Deselect:
		HAND A 1 A_Lower
		Loop
		
		Ready:
		HAND A 1 A_WeaponReady
		Loop
		
		Fire: 
		HAND BC 3
		HAND D 0 A_GunFlash
		HAND D 0 A_FireBullets(0,0,1,10, "BulletPuff")
		Goto Ready
	}
}